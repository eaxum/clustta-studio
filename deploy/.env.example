# Clustta Studio — Environment Variables
# Copy this file to .env and fill in the values.
#
# Required:
DATA_FOLDER=./data
PROJECTS_FOLDER=./projects

# Database paths (inside the container)
STUDIO_USERS_DB=/var/data/studio_users.db
SESSION_DB=/var/data/sessions.db

# ── Private mode ─────────────────────────────────────────────
# Set to true for standalone operation without Clustta Cloud.
# When PRIVATE=true, API key and server name are not required.
PRIVATE=true

# ── Clustta Cloud (set PRIVATE=false to use) ─────────────────
# CLUSTTA_STUDIO_API_KEY=your-studio-key
# CLUSTTA_SERVER_NAME=YourStudioName
# CLUSTTA_SERVER_URL=http://your-host-ip/clustta
